{
  "realm": "Persfin",
  "enabled": true,
  "accessTokenLifespan": 2592000,
  "ssoSessionIdleTimeout": 2592000,
  "ssoSessionMaxLifespan": 2592000,

  "roles": {
    "realm": [
      { "name": "USER" },
      { "name": "ADMIN" }
    ]
  },

  "groups": [
    {
      "name": "admins",
      "realmRoles": ["ADMIN"]
    },
    {
      "name": "users",
      "realmRoles": ["USER"]
    }
  ],

  "clients": [
    {
      "clientId": "personal-finance-api",
      "name": "Personal Finance Backend",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "personal-finance-secret",
      "redirectUris": [
        "http://localhost:8080/*"
      ],
      "webOrigins": ["*"],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true
    }
  ],

  "users": [
    {
      "username": "alice",
      "enabled": true,
      "emailVerified": true,
      "email": "alice@example.com",
      "firstName": "Alice",
      "lastName": "Doe",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": ["USER"],
      "groups": ["/users"]
    }
  ]
}

